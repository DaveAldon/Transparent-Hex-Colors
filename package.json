{
    "name": "@davealdon/hext",
    "version": "1.0.1",
    "description": "Adds transperancy to your hex color codes",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "test": "jest --config jestconfig.json",
        "prepare" : "npm run build",
        "prepublishOnly" : "npm test && npm run lint",
        "preversion" : "npm run lint",
        "version" : "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:DaveAldon/Transparent-Hex-Colors.git"
    },
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "keywords": [
        "hex",
        "transparency",
        "color"
    ],
    "author": "davealdon",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DaveAldon/Transparent-Hex-Colors/issues"
    },
    "homepage": "https://github.com/DaveAldon/Transparent-Hex-Colors",
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "jest": "^27.5.1",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.5.5"
    }
}
